{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "maven: compile",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "compile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "maven: test",
      "type": "shell",
      "command": "mvn",
      "args": ["test"],
      "group": "test",
      "problemMatcher": ["$javac"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "maven: run App",
      "type": "shell",
      "command": "mvn",
      "args": ["exec:java", "-Dexec.mainClass=App"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
