{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CMake target (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",        // change to lldb on macOS, cppvsdbg on Windows
      "externalConsole": false,
      "environment": [
        { "name": "BUILD_TYPE", "value": "Debug" }
      ]
    },
    {
      "name": "Launch CMake target (Release)",
